{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "arrowParens": "always",
  "parser": "typescript",
  "plugins": ["prettier-plugin-organize-imports"],
  "overrides": [
    {
      "files": "**/*.md",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": [
        ".vscode/**/*.json",
        "tsconfig.dts.json",
        "tsconfig.prod.json",
        "tsconfig.eslint.json",
        "tsconfig.json"
      ],
      "options": {
        "parser": "json"
      }
    }
  ]
}
